{
  "fpsLimit": 60,
  "background": {
    "color": "#000"
  },
  "interactivity": {
    "events": {
      "onClick": { "enable": true, "mode": "push" },
      "onHover": {
        "enable": false,
        "mode": "repulse",
        "parallax": { "enable": false, "force": 60, "smooth": 10 }
      },
      "resize": true
    },
    "modes": {
      "push": { "quantity": 4 },
      "repulse": { "distance": 200, "duration": 0.4 }
    }
  },
  "particles": {
    "color": { "value": "#ffffff" },
    "move": {
      "direction": "none",
      "enable": true,
      "outModes": "out",
      "random": true,
      "speed": 2,
      "straight": false
    },
    "number": {
      "density": {
        "enable": true,
        "area": 800
      },
      "value": 80
    },
    "opacity": {
      "animation": {
        "enable": true,
        "speed": 0.05,
        "sync": true,
        "startValue": "random",
        "count": 1,
        "destroy": "none"
      },
      "value": {
        "min": 0,
        "max": 0.5
      }
    },
    "shape": {
      "type": "circle"
    },
    "size": {
      "value": { "min": 1, "max": 5 }
    }
  }
}
